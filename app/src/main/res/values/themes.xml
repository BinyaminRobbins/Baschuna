<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bashcuna" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_light_primary</item>
        <item name="colorPrimaryVariant">@color/color_accent</item>
        <item name="colorOnPrimary">@color/primary_text_on_light</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_text_on_light</item>
        <item name="colorSecondaryVariant">@color/color_accent</item>
        <item name="colorOnSecondary">@color/primary_text_on_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:editTextBackground" tools:targetApi="l">@drawable/custom_edittext</item>
        <item name="android:textColor" tools:targetApi="l">@color/dark_text</item>
        <item name="navigationIconTint">@color/black</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="postSplashScreenTheme">@style/Theme.Bashcuna</item>
        <item name="windowSplashScreenBackground">@color/color_accent</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="splashScreenIconSize">40dp</item>
    </style>

    <style name="App_Bar_Text_Appearance" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/secular_one</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text_on_light</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/color_accent</item>
    </style>

    <style name="MyToggleButtonsTheme" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/custom_toggle_buttons</item>
        <item name="cornerRadius">10dp</item>
        <item name="elevation">0dp</item>
        <item name="strokeColor">@color/color_accent</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="Theme.Baschuna.FilledTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/color_accent</item>
        <item name="startIconTint">@color/color_accent</item>
        <item name="boxBackgroundColor">@color/background_light_primary</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/color_accent</item>
    </style>

    <style name="Theme.Baschuna.OutlinedTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_text_on_light</item>
        <item name="android:textColorHint">@color/primary_text_on_light</item>
        <item name="startIconTint">@color/primary_text_on_light</item>
    </style>

    <style name="Theme.Baschuna.ButtonText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/varela_round</item>
        <item name="backgroundTint">@color/secondary_text_on_light</item>
    </style>

    <style name="Theme.Baschuna.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/color_accent</item>
        <item name="colorOnPrimary">@color/light_text</item>
    </style>

    <style name="Theme.Baschuna.TimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/color_accent</item>
        <item name="colorOnPrimary">@color/light_text</item>
    </style>
</resources>